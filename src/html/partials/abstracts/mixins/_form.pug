mixin form(items)
  each item in items
    +b.SECTION(class= 'form--' + item.name)
      +e.H3.title #{item.title}
      +e.P.text #{item.text}
      +e.FORM.form(action='', method='', id= item.id)

        if item.application
          .form-group.required
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя:')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.INPUT.input(type='text', name='Продукция', placeholder='Наименование продукции:*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.INPUT.input(type='email', name='Email', placeholder='Ваш e-mail:*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон:')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.SELECT.country-list
              option Страна*
              option Россия
              option Беларусь
              option Казахстан
              option Украина
              option Азербайджан
              option Армения
              option Грузия
              option Молдавия
          .form-group.required
            +e.SELECT.region-list
              option Регион:*
              option Санкт-Петербург и Ленинградская область
              option Москва и Московская область
              option Новгородская область
              option Псковская область
              option Республика Карелия
              option Мурманская область
              option Калининградская область
              option Вологодская область
              option Тверская область

        if item.question
          .form-group.required
            +e.INPUT.input(type='text', name='Продукция', placeholder='Ваше имя')
            p.help-block.help-block-error Ошибка
          .form-group.required
            +e.INPUT.input(type='tel', name='Email', placeholder='Ваш телефон')
            p.help-block.help-block-error Ошибка заполнения поля формы


        if item.call
          .form-group.required.has-error
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя:')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required.has-success
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон:')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.SELECT.country-list
              option Страна*
              option Россия
              option Беларусь
              option Казахстан
              option Украина
              option Азербайджан
              option Армения
              option Грузия
              option Молдавия
          .form-group.required
            +e.SELECT.region-list
              option Регион:*
              option Санкт-Петербург и Ленинградская область
              option Москва и Московская область
              option Новгородская область
              option Псковская область
              option Республика Карелия
              option Мурманская область
              option Калининградская область
              option Вологодская область
              option Тверская область


        if item.questionheader
          .form-group.required
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя:')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.INPUT.input(type='email', name='Email', placeholder='Контактный e-mail*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон:')
